  </div>  <div id="info" class="info-box"></div>  <script>
    function showInfo(person) {
      const infoBox = document.getElementById('info');

      if (person === 'saya') {
        infoBox.innerHTML = `
          <h2>Data Saya</h2>
          <p>Nama: Fabian Gavriel Rasyadan</p>
          <p>NIM: 251910201081</p>
          <p>Prodi: Teknik Elektro</p>
        `;
      } else if (person === 'teman') {
        infoBox.innerHTML = `
          <h2>Data Teman Saya</h2>
          <p>Nama: Zulfa Indarasyid</p>
          <p>NIM: 251910201</p>
          <p>Prodi: Teknik Elektro</p>
        `;
      }

      infoBox.style.display = 'block';
    }
  </script></body>
